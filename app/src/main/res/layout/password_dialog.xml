<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="100dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_ripple_black"
        android:padding="@dimen/half_margin"
        android:src="@drawable/ic_clear"
        android:tint="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="הכנס סיסמה"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.dalpak.bringit.utils.NumberKeyboardView
        android:id="@+id/numberKeyboardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text=""
        android:visibility="visible" />

</LinearLayout>