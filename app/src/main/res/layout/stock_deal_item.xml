<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="150dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="150dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/time_backgroung"
    android:backgroundTint="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/stock_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:background="@drawable/time_backgroung"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/in_stock_tv_click"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_weight="1"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="במלאי"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginEnd="7dp"
        android:background="@drawable/background_radius5"
        android:backgroundTint="@color/gray_e6ebf4"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pickup_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:text="5.00"
                android:textColor="@color/blue_2060e5"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/shipping_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:text="5.00"
                android:textColor="@color/blue_2060e5"
                android:textSize="13dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="מחיר למסעדה:"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="מחיר למשלוח:"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:gravity="right|center_vertical"
        android:lines="2"
        android:paddingRight="8dp"
        android:text="name"
        android:textColor="@color/text_color"
        android:textSize="13dp" />
</LinearLayout>