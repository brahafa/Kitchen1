<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/time_backgroung"
    android:backgroundTint="@color/gray_e6ebf4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:gravity="center"
        android:lines="2"
        android:paddingRight="7dp"
        android:text="name"
        android:textColor="@color/text_color"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/stock_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/time_backgroung"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/btn_background_press"
        android:backgroundTint="@color/gray_fcfdff"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pickup_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:text="5.00"
                android:textColor="@color/blue_2060e5"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/shipping_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:text="5.00"
                android:textColor="@color/blue_2060e5"
                android:textSize="12dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="מחיר למסעדה:"
                android:textColor="@color/text_color"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="מחיר למשלוח:"
                android:textColor="@color/text_color"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/in_stock_tv_click"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="במלאי"
        android:textColor="@color/white"
        android:textSize="10dp" />


</LinearLayout>